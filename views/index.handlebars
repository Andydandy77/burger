
<div class="container"> 
    <h1 id = "title">Dave's Burger Joint</h1>

    <img src="assets/img/burger.png" class = "burger">


    <div class = "center_div">
        <div class= "row">

            <label for="example-search-input" class="col-lg-4 col-form-label">Enter a burger you would like to eat!</label>

        </div>
        <div class="form-group row" >
            <div class="col-lg-4" >
                <input class="form-control"  type="search" value="Burger Name" id="input">
            </div>
        </div>

        <button type="submit" id="submit"class="btn btn-primary">Submit</button>

    </div>


        <div id = "notDevoured">
            <h2> Waiting to Be Eaten</h2>
            <ul>
                {{#each burgers}}
                    {{#unless this.devoured}}
                        {{> burger-block devoured=false}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div id = "devoured">
            <h2> Digesting in Your Stomach</h2>
            <ul>
                {{#each burgers}}
                    {{#if this.devoured}}
                        {{> burger-block devoured=true}}
                    {{/if}}
                {{/each}}
            </ul>
            
        </div>

</div>
    
 



